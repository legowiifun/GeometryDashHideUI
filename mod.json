	"id": "legowiifun.hide_ui",
	"name": "Hide UI",
	"version": "v1.3.0",
	"developer": "legowiifun",
	"description": "Hides the game UI on a keypress.",
	"dependencies": {
  		"geode.node-ids": ">=v1.22.0"
 	},
	"tags": [
		"gameplay",
		"offline",
		"interface",
		"utility"
	],
	"api": {
		"include": [
			"src/api/hideUIAPI.hpp"
		]
	},
	"settings": {
		"auto-hide": {
			"type":"bool",
			"name":"Auto-hide",
			"description": "Hide the UI when you start. You will then have to manually re-enable it",
